<% reload_url = params[:select] ? builder_site_documents_path(:select => true) : builder_site_documents_path %>
<%= simple_form_for(
  [:builder, current_site, Document.new], 
  :html => { 
    :id => 'fileupload', 
    :data => { :"reload-url" => reload_url },
    :multipart => true 
  }
) do |f| %>
  <%= f.input :document, :as => :file, :input_html => { :id => 'file' } %>
<% end %>
