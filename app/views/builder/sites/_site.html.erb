<article class="site">
  <%= link_to(
    'Delete', 
    builder_site_path(site), 
    :class => 'delete', 
    :method => :delete,
    :data => { :confirm => 'Are you sure? This is going to permanently delete this site and its content.' } 
  ) %>
  <%= content_tag(
    :time, 
    "Updated #{time_ago_in_words(site.updated_at)} ago", 
    :class => 'date'
  ) %>
  <%= content_tag(:h4, link_to(site.title, builder_site_path(site))) %>
</article>
