<div class="site-title">
  <%= link_to(current_site.title, '#') %>
  <%= site_list %>
</div>
<div class="user">
  <%= avatar(current_user, 84) %>
  <%= content_tag(:span, current_user.display_name.upcase, 
    :class => 'name') %>
  <%= link_to(destroy_user_session_path, :class => 'user-menu-trigger') { 
    content_tag(:i, nil, :class => 'icon-exit') } %>
</div>