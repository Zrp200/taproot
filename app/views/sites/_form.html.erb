<%= simple_form_for(current_site) do |f| %>

  <%= form_tabs ['details', 'image-croppers'] %>

  <section class="form tabbed details">
    <div class="half-row">
      <%= f.input :title %>
      <%= f.input :url, :as => :string %>
    </div>
    <%= f.input(:home_page_id, :collection => site_pages) if site_pages.size > 0 %>
    <%= f.input :description %>
  </section>

  <section class="form tabbed image-croppers">
    <% croppings = (
      current_site.image_croppings + [Heartwood::ImageCropping.new]
    ) %>
    <%= f.simple_fields_for(:image_croppings, croppings) do |crop| %>
      <div class="half-row">
        <%= crop.input :title %>
        <%= crop.input :ratio %>
      </div>
      <div class="half-row">
        <%= crop.input :min_width, :label => 'Minimum Width (px)' %>
        <%= crop.input :min_height, :label => 'Minimum Height (px)' %>
      </div>
      <%= content_tag(:hr) unless crop.object == croppings.last %>
    <% end %>
  </section>

  <%= f.submit %>

<% end %>
