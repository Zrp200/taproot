<%= simple_form_for(@page_type, :url => [current_site, @page_type]) do |f| %>

  <section class="form">
    <%= f.input :title %>
    <%= f.input :description %>
    <div class="half-row">
      <%= f.input :icon %>
      <%= f.input :template %>
    </div>
  </section>

  <%= f.submit %>
<% end %>
