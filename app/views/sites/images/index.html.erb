    :class => 'new upload-trigger' %>
  <%= simple_form_for([current_site, Heartwood::Image.new], 
    :html => { :id => 'fileupload' }
  ) do |f| %>
    <%= f.input :image %>
  <% end %>
<% end %>

<%= render 'progress' %>

